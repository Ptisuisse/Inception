
server {
	listen 80;
	server_name lvan-slu.42.fr;
	return 301 https://$host$request_uri;
}

server {
	listen 443 ssl;

	server_name lvan-slu.42.fr;

	ssl_protocols TLSv1.2 TLSv1.3;
	ssl_certificate /etc/nginx/ssl/inception.crt;
	ssl_certificate_key /etc/nginx/ssl/inception.key;

	root /var/www/wordpress;

	index index.php index.html index.htm index.nginx-debian.html;

 	location / {
 		try_files $uri $uri/ =404;
 	}

	location ~ /\.ht {
	 	deny all;
 	}
    location ^~ /static/ {
        include /etc/nginx/proxy_params;
        proxy_pass http://static-site:8080/;
    }
	location = /favicon.ico {
    	log_not_found off;
    	access_log off;
    	proxy_pass http://static-site:8080/favicon.ico;
    	include /etc/nginx/proxy_params;
	}
    location ~ ^/adminer(/.*$|$) {
        fastcgi_index index.php;
        include /etc/nginx/fastcgi_params;
        fastcgi_param SCRIPT_FILENAME /var/www/html/index.php;
        fastcgi_pass adminer:9000;
	}
	location /grafana/ {
	    proxy_pass http://grafana:3000/;
	    proxy_set_header Host $http_host; # Utiliser $http_host
	    proxy_set_header X-Real-IP $remote_addr;
	    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
	    proxy_set_header X-Forwarded-Proto $scheme;
	    # Optionnel : retirez temporairement les lignes suivantes si le problème persiste
	    # proxy_redirect off;
	    # proxy_set_header X-Forwarded-Host $http_host; # Si vous le gardez, utilisez $http_host
	    # proxy_set_header X-Forwarded-Port $server_port;

	    # Pour Grafana Live (WebSockets)
	    proxy_http_version 1.1;
	    proxy_set_header Upgrade $http_upgrade;
	    proxy_set_header Connection "upgrade";
	}

	location /prometheus/ {
	    proxy_pass http://prometheus:9090/; # Le / final ici aussi
	    proxy_set_header Host $http_host;
	    proxy_set_header X-Real-IP $remote_addr;
	    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
	    proxy_set_header X-Forwarded-Proto $scheme;
	}
	# location /metrics {
    # Si l'exportateur est dans le même conteneur ou un sidecar accessible via localhost
    # 	proxy_pass http://localhost:METRICS_EXPORTER_PORT; # Ou l'IP/nom du service de l'exportateur
    # Ou si l'exportateur est un service Docker séparé:
    # proxy_pass http://nom_service_exportateur:METRICS_EXPORTER_PORT;

    # Sécurisation (optionnelle, mais recommandée si /metrics n'est pas pour le public)
    # allow PROMETHEUS_CONTAINER_IP; # Autoriser Prometheus
    # deny all;                     # Bloquer les autres
	# }
 	location ~ \.php$ {
    		include snippets/fastcgi-php.conf;
    		fastcgi_pass wordpress:9000;
	}
}
